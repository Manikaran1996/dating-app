<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/signup_boundary_margin_edittext"
                android:layout_marginLeft="@dimen/signup_boundary_margin_edittext"
                android:layout_marginRight="@dimen/signup_boundary_margin_edittext"
                android:layout_marginStart="@dimen/signup_boundary_margin_edittext"
                android:layout_marginTop="30dp"
                android:text="Sign Up"
                android:textSize="30sp" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginLeft="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginRight="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginStart="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginTop="@dimen/signup_top_margin_edittext">

                        <EditText
                            android:id="@+id/username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="UserName"
                            android:inputType="text" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginLeft="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginRight="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginStart="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginTop="@dimen/signup_top_margin_edittext">

                        <EditText
                            android:id="@+id/password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Password"
                            android:inputType="textPassword" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginLeft="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginRight="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginStart="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginTop="@dimen/signup_top_margin_edittext">

                        <EditText
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Name"
                            android:inputType="text" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginLeft="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginRight="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginStart="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginTop="@dimen/signup_top_margin_edittext">

                        <EditText
                            android:id="@+id/surname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Surname"
                            android:inputType="text" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginLeft="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginRight="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginStart="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginTop="@dimen/signup_top_margin_edittext">

                        <EditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Email"
                            android:inputType="textEmailAddress" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginLeft="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginRight="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginStart="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginTop="@dimen/signup_top_margin_edittext">

                        <EditText
                            android:id="@+id/age"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Age"
                            android:inputType="number" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginLeft="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginRight="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginStart="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginTop="@dimen/signup_top_margin_edittext">

                        <EditText
                            android:id="@+id/zip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Zip/Postcode"
                            android:inputType="text" />

                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginLeft="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginRight="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginStart="@dimen/signup_boundary_margin_edittext"
                        android:layout_marginTop="@dimen/signup_top_margin_edittext"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="2dp"
                                android:layout_marginEnd="2dp"
                                android:textSize="18sp"
                                android:text="Country : " />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/country_spinner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                        </android.support.v7.widget.AppCompatSpinner>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/signUpBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Sign up"
        android:textColor="#fff"
        android:background="@color/colorPrimaryDark"/>
</LinearLayout>
