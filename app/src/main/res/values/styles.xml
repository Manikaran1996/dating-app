<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="signInScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#fff</item>
    </style>

    <style name="edit_profile_row">
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="edit_profile_row_labels">
        <item name="android:layout_weight">0.4</item>
        <item name="android:gravity">right</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="edit_profile_row_values" parent="@style/Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:layout_weight">0.6</item>
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:entries">@array/ownACar</item>
    </style>

    <style name="edit_profile_card_view">
        <item name="android:paddingTop">20dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="edit_profile_labels">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">@dimen/edit_profile_label_margin_top</item>
    </style>

    <style name="edit_profile_values">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:entries">@array/ownACar</item>
    </style>

</resources>
